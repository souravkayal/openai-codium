@model IEnumerable<TodoApp.Models.TodoItem>

@{
    ViewData["Title"] = "TODO List";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">TODO List</h1>
    <a class="btn btn-primary" asp-action="Create">Add TODO</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No tasks yet. Add your first TODO.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Done</th>
                <th>Title</th>
                <th>Description</th>
                <th>Due Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <form asp-action="ToggleComplete" method="post" class="m-0">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button class="btn btn-sm @(item.IsCompleted ? "btn-success" : "btn-outline-secondary")" type="submit">
                                @(item.IsCompleted ? "Completed" : "Mark done")
                            </button>
                        </form>
                    </td>
                    <td class="@(item.IsCompleted ? "text-decoration-line-through" : string.Empty)">@item.Title</td>
                    <td>@item.Description</td>
                    <td>@(item.DueDate?.ToShortDateString() ?? "-")</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
